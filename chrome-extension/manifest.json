{
	"name": "動画プレイヤー補助",
	"version": "0.1.0",
	"manifest_version": 2,

	"description": "<video>動画を再生した時にコントローラーを補助する",

	"permissions": [
		"contextMenus",
		"activeTab"
	],

	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},

	"content_scripts": [{
		"matches": [
			"http://*/*.mp4",
			"file:///*.mp4"
		],
		"js": [
			"content_script.js"
		]
	}]
}
